{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 9098
    },
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  },
  "hosting": {
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.firebase/**",
      "**/.svelte-kit/**",
      "**/.vercel/**",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "region": "us-central1",
          "serviceId": "template-sveltekit-tailwind",
          "pinTag": true
        }
      }
    ],
    "trailingSlash": false
  }
}
